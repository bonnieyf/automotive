<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.7.1/gsap.min.js"></script>
<script src="./../../js.lib/jquery-3.6.0.min.js"></script>
<script src="./../../js.lib/popper.min.js"></script>
<script src="./../../js.lib/bootstrap/bootstrap.min.js"></script>
<script src="./../../js.lib/swiper/swiper-bundle.min.js"></script>
<script src="./../js/functions.js"></script>
<script src="./../js/detectLang.js"></script>
script.
    $(function(){
        const breakpoint = window.matchMedia( '(min-width:769px)' );
        let mySwiper;
        const breakpointChecker = function() {
            if ( breakpoint.matches === true ) {
                console.log('destroy');
                if ( mySwiper !== undefined ) mySwiper.destroy( true, true );
                return;

            } else if ( breakpoint.matches === false ) {
                console.log('enable');
                return enableSwiper();
            }

        };

        const enableSwiper = function (){
            mySwiper = new Swiper ('#modal-swiper.swiper-container', {
                loop: true,
                centeredSlides: true,
                slidesPerView: 1,
                pagination: {
                    el: "#modal-swiper .swiper-pagination",
                    clickable: true,
                },

            });
        }

        //- $('#modal-detail').modal('show');
        

        $(".video-iframe-link").click(function (e) {
            e.preventDefault();
            let code = $(this).data("youtube");
            let youtube = `<iframe width="560" height="315" src="https://www.youtube.com/embed/${code}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`
            let innerTitle = $(this).data('title');
            $('#modal-video .title').text(innerTitle);
            $('#modal-video .youtube-iframe').empty();
            $('#modal-video .youtube-iframe').append(youtube);
            $('#modal-video').css({'top': 0});
        });

        $('#modal-video .close').click(function(){
            $('#modal-video .youtube-iframe').empty();
            $('#modal-video').css({'top': '100%'});
        });


        $('.modal-navi .tab').click(function(e){
            e.preventDefault();
            let _idx = $(this).index();
            let _open = $(this).attr('href');
            $('.modal-navi .tab.active').removeClass('active');
            $('.tab-content.show').removeClass('show');
            $(this).addClass('active');
            $(_open).addClass('show');

            if(_idx === 2){
                breakpointChecker();
            }
        });

        $('.custom-modal-detail').on('shown.bs.modal', function () {
            $('.tab-content.show').removeClass('show');
            $('.tab-content').eq(0).addClass('show');

            $('.modal-navi .tab.active').removeClass('active');
            $('.modal-navi .tab').eq(0).addClass('active');
        });


        $(window).resize(function(){
            breakpointChecker();
        })

    });
